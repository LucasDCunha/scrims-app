<main>
<h2 class="subtitulo">Editar Equipe</h2>

<%= simple_form_for @team do |f| %>
    <%= f.input :name %>
    <%= f.button :submit, 'Save', class: 'btn btn-lg mt-3 mb-2 back-btn' %>
<% end %>

<% @players.each do |player| -%>
    <ul class="dados-equipe">
        <li class="nomeequipe"><%= player.name %><%= link_to "(Delete)", player_path(player),
                                              method: :delete,
                                              data: { confirm: "Tem certeza?" } %></li>
    </ul>
<% end -%>

<h2 class="subtitulo">ADD PLAYER</h2>

<%= simple_form_for @player do |f| %>
    <%= f.input :name %>
    <%= f.input :team_id, as: :hidden, input_html: { value: @team.id } %>
    <%= f.button :submit, 'Save', class: 'btn btn-lg mt-3 mb-2 back-btn' %>
<% end %>


<%= link_to "<button class='btn btn-primary'>Voltar</button>".html_safe, teams_path()%>

<%= link_to "EXCLUIR EQUIPE", team_path(@team), method: :delete, class: "btn btn-primary" %>

</main>


<%= render "components/menu" %>