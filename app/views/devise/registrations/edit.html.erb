<main>
<h2 class="subtitulo">Editar Usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field dados-editar-usuario">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Esperando confirmação para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field dados-editar-usuario">
    <%= f.label :password, "Nova senha" %> <i>(Deixe em branco se não quiser mudar)</i>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <p>Mínimo de <%= @minimum_password_length %> caracteres</p>
    <% end %>
  </div>

  <div class="field dados-editar-usuario">
    <%= f.label :password_confirmation, "Confirme a nova senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field dados-editar-usuario">
    <%= f.label :current_password, "Senha atual" %> <i>(digite-a para confirmar as mudanças)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions atualizar-usuario">
    <%= f.submit "Atualizar" %>
  </div>
<% end %>

<div class="deletar-conta">
  <h3>Deletar conta</h3>
  <%= button_to "Deletar Minha Conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
</div>

<%= link_to "Voltar", :back %>

</main>

<%= render "components/menu" %>